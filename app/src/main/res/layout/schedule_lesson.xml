<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_lesson"
    android:clickable="true"
    android:focusable="true">

    <!-- Верхняя часть карточки: время и кабинет -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Время урока -->
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_bells_schedule"
            android:textSize="14sp"
            android:textColor="@color/lesson_time"
            android:fontFamily="sans-serif-medium" />

        <!-- Кабинет или другое место проведения -->
        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_place"
            android:textSize="14sp"
            android:textColor="@color/lesson_place"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <!-- Название предмета -->
    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_subject"
        android:textSize="18sp"
        android:textColor="@color/lesson_subject"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:id="@+id/homeworkGroup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Эмодзи домашнего задания -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/homework_emoji"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <!-- Текст домашнего задания -->
        <TextView
            android:id="@+id/homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/homework_not_found"
            android:textSize="14sp"
            android:textColor="@color/lesson_homework_text"
            android:fontFamily="sans-serif"
            android:layout_marginTop="2dp"
            android:lineSpacingExtra="2dp"
            android:maxLines="10"
            android:ellipsize="end" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/filesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>