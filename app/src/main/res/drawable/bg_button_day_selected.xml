<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Выбранный сегодня -->
    <item android:state_selected="true" android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#40FFFFFF" />
            <stroke android:width="2dp" android:color="#FF4CAF50" />
        </shape>
    </item>

    <!-- Выбранный выходной -->
    <item android:state_selected="true" android:state_hovered="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#40FFFFFF" />
            <stroke android:width="2dp" android:color="#B3FF8A80" />
        </shape>
    </item>

    <!-- Выбранный день -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#40FFFFFF" />
            <stroke android:color="#80FFFFFF" android:width="1dp" />
        </shape>
    </item>

    <!-- Сегодня -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#FF4CAF50" />
        </shape>
    </item>

    <!-- Выходной -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#B3FF8A80" />
        </shape>
    </item>

    <!-- Обычный -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#10FFFFFF" />
            <stroke android:color="#30FFFFFF" android:width="1dp" />
        </shape>
    </item>

</selector>